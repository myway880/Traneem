    <verse name="v1a">
      <lines>المحبة لا تسقط أبدا</lines>
    </verse>
    <verse name="v1b">
      <lines>ونحن قد عرفنا نحن قد صدقنا</lines>
    </verse>
    <verse name="v1c">
      <lines>المحبة التي لله فينا</lines>
    </verse>
    <verse name="v1d">
      <lines>الله محبة أحبنا الله محبة يحبنا</lines>
    </verse>
    <verse name="v1e">
      <lines>ومن يثبت في المحبة يثبت في الله</lines>
    </verse>
    <verse name="v1f">
      <lines>والله فيه</lines>
    </verse>
    <verse name="v1g">
      <lines>المحبة لا تسقط أبد</lines>
    </verse>

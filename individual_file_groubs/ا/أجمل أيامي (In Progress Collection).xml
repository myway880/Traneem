  <lyrics>
    <verse name="v1a">
      <lines>أجمل أيامي قربك يسوع</lines>
    </verse>
    <verse name="v2">
      <lines>أخذ آلامي وكل الدموع</lines>
    </verse>
    <verse name="v3">
      <lines>مالي سواك خذني بحماك</lines>
    </verse>
    <verse name="v4">
      <lines>ربي معاك غفرت أثامي</lines>
    </verse>
    <verse name="v5">
      <lines>دربك أمشي ربي رضاك</lines>
    </verse>
    <verse name="v6">
      <lines>لن يغفى رمشي عن وصاياك</lines>
    </verse>
    <verse name="v7">
      <lines>إلهي مولاي امسك يدي</lines>
    </verse>
    <verse name="v8">
      <lines>نحوك عيناي أتبع خطاك</lines>
    </verse>
    <verse name="v9">
      <lines>ربي حبيبي لا يتركني</lines>
    </verse>
    <verse name="v1b">
      <lines>في وقت الحرب يقاتل عني</lines>
    </verse>
    <verse name="v10">
      <lines>يحرسني يعضدني</lines>
    </verse>
    <verse name="v11">
      <lines>يغمرني حنانك</lines>
    </verse>
  </lyrics>
